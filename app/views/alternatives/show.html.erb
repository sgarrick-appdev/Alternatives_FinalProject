<div>
  <div>
    <h1>
      Alternative #<%= @the_alternative.id %> details
    </h1>

    <div>
      <div>
        <a href="/alternatives">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_alternative/<%= @the_alternative.id %>">
          Delete alternative
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Original ingredient
      </dt>
      <dd>
        <%= @the_alternative.original_ingredient_id %>
      </dd>

      <dt>
        Alternative ingredient
      </dt>
      <dd>
        <%= @the_alternative.alternative_ingredient_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_alternative.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_alternative.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit alternative
    </h2>

    <form action="/modify_alternative/<%= @the_alternative.id %>"  method="post" >
      <div>
        <label for="original_ingredient_id_box">
          Original ingredient
        </label>

        <input type="text" id="original_ingredient_id_box" name="query_original_ingredient_id" value="<%= @the_alternative.original_ingredient_id %>">
      </div>

      <div>
        <label for="alternative_ingredient_id_box">
          Alternative ingredient
        </label>

        <input type="text" id="alternative_ingredient_id_box" name="query_alternative_ingredient_id" value="<%= @the_alternative.alternative_ingredient_id %>">
      </div>

      <button>
        Update alternative
      </button>
    </form>
  </div>
</div>

<hr>
