<div>
  <div>
    <h1>
      List of all user sensitivities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user sensitivity
    </h2>

    <form action="/insert_user_sensitivity" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="sensitivity_id_box">
          Sensitivity
        </label>

        <input type="text" id="sensitivity_id_box" name="query_sensitivity_id">
      </div>

      <button>
        Create user sensitivity
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Sensitivity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_sensitivities.each do |a_user_sensitivity| %>
      <tr>
        <td>
          <%= a_user_sensitivity.id %>
        </td>

        <td>
          <%= a_user_sensitivity.user_id %>
        </td>

        <td>
          <%= a_user_sensitivity.sensitivity_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_user_sensitivity.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user_sensitivity.updated_at) %> ago
        </td>

        <td>
          <a href="/user_sensitivities/<%= a_user_sensitivity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
