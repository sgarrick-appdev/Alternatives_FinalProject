
  <h3 class = "offset-md-1 py-6">
    Edit User Account
  </h3>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post"  class = "col-md-4 offset-md-1">
              
      <div class="form-group">
        <label for="email_box">Email</label>
          
        <input class="form-control" id="email_box" name="query_email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div class="form-group">
        <label for="username_box">Username</label>
          
        <input class="form-control" id="username_box" name="query_username" value="<%= @current_user.username %>">
          
      </div>
              
      <div class="form-group">
        <label for="password_box">Password</label>
        <input class="form-control" id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div class="form-group">
        <label for="password_confirmation_box">Password Confirmation</label>
        <input class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button class="btn btn-success">
        Update account
      </button>
    </form>
  </div>

